{
  "name": "deepcode",
  "displayName": "deepCode",
  "description": "",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "editor/context": [
        {
          "command": "deepcode.optimizeCode",
          "group": "navigation",
          "when": "editorHasSelection"
        },
        {
          "command": "deepcode.comment",
          "group": "navigation",
          "when": "editorHasSelection"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vs-deepcode-bar",
          "title": "deepcode",
          "icon": "actReq.svg"
        }
      ]
    },
    "views": {
      "vs-deepcode-bar": [
        {
          "type": "webview",
          "id": "vs-deepcode-bar.webview",
          "name": "deepcode Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "deepcode.optimizeCode",
        "title": "deepcode优化"
      },
      {
        "command": "deepcode.comment",
        "title": "deepcode注释 "
      }
    ],
    "configuration": {
      "title": "deepcode",
      "properties": {
        "deepcode.apiKey": {
          "type": "string",
          "default": "sk-c49544eefa7343ae83fbe4f500f44659",
          "description": "API Key for deepcode"
        },
        "deepcode.endpoint": {
          "type": "string",
          "default": "https://api.deepseek.com/chat/completions",
          "description": "API Endpoint"
        },
        "deepcode.model": {
          "type": "string",
          "default": "deepseek-chat",
          "description": "Model Name"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:webview": "vite build --config src/webview/vite.config.ts",
    "watch:webview": "vite build --config src/webview/vite.config.ts --watch",


    "vscode:prepublish2": "webpack --mode production",
    "compile2": "webpack --mode none",
    "watch2": "webpack --mode none --watch"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "axios": "^1.7.9",
    "vite": "^6.1.0",
    "vue": "^3.5.13"
  }
}
